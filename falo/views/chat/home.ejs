              <h5 class="d-block d-sm-none">Connecting people</h5>
            </div>
          </div>
          <div class="row d-none d-xl-block">
            <div class="col">
              <h2>Connecting people</h2>
            </div>
          </div>
        </div>
        <div class="col py-3">
            <div class="col-12 col-lg-3 px-0 px-lg-2">
              <a href="/signout" class="col mb-3 btn btn-outline-secondary d-none d-lg-block">ĐĂNG XUẤT</a>
            </div>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid bg-dark text-light">
    <%- include ('../link/error_mgs.ejs'); %>
    <div class="container">
      <div class="col py-5">
        <h1><strong>WELCOME</strong></h1>
        <h2>Home page will be here</h2>
        <h4>Account email: <%= user.email %></h4>
        <h4>Account id: <%= user.id %></h4>
        <h4>Account type: <%= user.role %></h4>
      </div>
    </div>
  </div>
  <%- include('../link/script.ejs'); %>
