<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../link/head.ejs'); %>
    <title>Falo</title>
</head>

<body style="height: 100vh; position: relative;">
  <div class="col-12 col-sm-6 col-md-3" id="sidebar" style="display: none; position:fixed;z-index:1; overflow:auto">
    <div class="card">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">    <button class="btn btn-secondary" onclick="w3_close()">Close &times;</button>
        </li>
        <li class="list-group-item">Dapibus ac facilisis in</li>
        <li class="list-group-item">Vestibulum at eros</li>
      </ul>
    </div>
  </div>

  <div id="main">
    <!-- nav -->
    <nav class="navbar navbar-dark bg-info justify-content-between px-3">
      <h1 class="my-0" style="line-height: 0;">
        <div id="openNav" class="text-secondary m-0 bg-dark pr-1"
          style="font-size: 17px; position: fixed; left: 0; top: 0; height: 54px; width: 17px;" onclick="w3_open()">
          <p>
            <em class="fas fa-angle-double-left"></em> <br>
            <em class="fas fa-angle-double-left"></em> <br>
            <em class="fas fa-angle-double-left"></em>
          </p>
        </div>
        <a class="navbar-brand py-0 ml-3" href="/">
          <img src="images/main/logo_F_light.png" width="30" height="30" class="d-inline-block align-top"
            alt="FALO logo">
          <span class="" style="font-family: 'Trebuchet MS'; font-size: 35px; line-height: 0.9;">Falo</span>
        </a>
      </h1>
      <div class="">
        <a href="/signout" class="btn btn-outline-light">ĐĂNG XUẤT <em class="fas fa-sign-out-alt"></em></a>
      </div>
    </nav>

    <div class="container-fluid">
      <div class="row flex-md-nowrap" >
        <!-- side contact -->
        <div class="col-12 col-md-4 col-xl-3 pt-2 border-right" style="height: calc(100vh - 54px); overflow-y: scroll; direction: rtl;" >
          <h5 id="user_email" class="text-center">
            <%= user.email %>
          </h5>
          <table class="table" style="direction: ltr;" id="chat_rooms" aria-hidden="true">
            <tbody>
              <tr>
                <td>
                  <p>Account email: <%= user.email %>
                  </p>
                </td>
              </tr>
              <tr>
                <td>
                  <p>Account id: <%= user.id %>
                  </p>
                </td>
              </tr>
              <tr>
                <td>
                  <p>Account type: <%= user.role %>
                  </p>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- chat box -->
        <div class="col-12 col-md-8 col-xl-9 bg-white">
          <div class="row" style="height: calc(100vh - 100px); overflow-y: scroll;">
            <table class="table" id="chatbox_table" aria-hidden="true">
              <tbody>
              </tbody>
            </table>
          </div>
          <div class="">
            <form id="formChat" class="form row px-2" action="javascript:;" onsubmit="sendMessage(form_message.form[0])">
              <input type="text" id="form_message" class="col form-control mr-2" autocomplete="off" placeholder="Nhập tin nhắn...">
              <button type="submit" class="btn btn-info col-2"><em class="fas fa-paper-plane"></em> SEND</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../link/script.ejs'); %>
    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/chat_socketio.js"></script>
</body>

</html>