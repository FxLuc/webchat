<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../link/head.ejs'); %>
  <title>SIGN IN</title>
</head>
<body>
  <div class="container-fluid bg-dark text-light">
    <div class="container">
      <div class="col py-5">
        <h1><strong>SIGN IN</strong></h1>
        <form method="post">
            <div class="panel panel-default">
              <div class="panel-body">
                <div class="form-group">
                  <label for="user_email">Email: </label>
                  <input type="email" class="form-control" id="user_email" name="user_email" placeholder="Enter your email">
                </div>

                <div class="form-group">
                  <label for="user_password">Password: </label>
                  <input type="password" class="form-control" id="user_password" name="user_password" minlength="8" placeholder="Enter your password">
                </div>
                <% if (error!='None') { %>
                <div class="alert alert-danger" role="alert">
                    <strong><%= error %></strong>
                </div>
                <% } %>
                <button type="submit" class="btn btn-success">SIGN IN</button>
              </div>
            </div>
          </form>
      </div>
    </div>
  </div>
  <%- include('../link/script.ejs'); %>
</body>
</html>